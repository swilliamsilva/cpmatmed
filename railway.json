{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["jdk8", "maven"]
        },
        "build": {
          "cmds": ["cd backend", "mvn clean package -DskipTests"]
        },
        "start": {
          "cmds": ["cd backend", "java -jar target/backend-0.0.1-SNAPSHOT.jar"]
        }
      }
    }
  },
  "services": [
    {
      "type": "postgresql",
      "settings": {
        "image": "postgres:14-alpine",
        "port": 5432,
        "variables": {
          "POSTGRES_USER": "postgres",
          "POSTGRES_PASSWORD": "CzvAukGtQLfJymGQpfKvERveaIuXnLMk",
          "POSTGRES_DB": "railway"
        }
      }
    }
  ]
}
