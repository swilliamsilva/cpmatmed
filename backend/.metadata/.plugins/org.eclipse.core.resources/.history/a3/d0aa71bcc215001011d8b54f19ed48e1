version: '3.8'

services:
  db:
    image: postgres:13
    container_name: cpmatmed-db
    restart: always
    environment:
      POSTGRES_DB: dbpmatmed
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"
    volumes:
      - ./init:/docker-entrypoint-initdb.d
