server:
  port: 8080

spring:
  application:
    name: cpmatmed-backend

  datasource:
    url: jdbc:postgresql://db:5432/dbpmatmed
    username: postgres
    password: postgres

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true

  sql:
    init:
      mode: always

cors:
  allowed-origins: "*"
